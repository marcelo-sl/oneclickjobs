@model OneClickJobs.Domain.ViewModels.Applications.CreateApplicationViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Apply</h1>

<h4>@ViewBag.Job.Title</h4>
<hr />

<div class="row">

    @if (ViewBag.UserAlreadyApplied == false)
    {
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="JobId" class="form-control" value="@ViewBag.Job.Id" />
                </div>
                <div class="form-group">
                    <label asp-for="ResumeId" class="control-label">Resume</label>
                    <select asp-for="ResumeId" asp-items="ViewBag.Resumes" class="form-control">
                        <option value="">Choose a resume</option>
                    </select>
                    <span asp-validation-for="ResumeId" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <a class="btn btn-secondary" href="javascript:history.back()">Back</a>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    }
    else
    {
        <div class="col-md-12">
            <div class="alert alert-primary" role="alert">
                You already applied for this job!
            </div>
        </div>

        <div>
            <a class="btn btn-secondary" href="javascript:history.back()">Back</a>
        </div>
    }

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
